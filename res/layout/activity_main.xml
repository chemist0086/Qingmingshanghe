<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/name.findspace.qingmingshanghe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="name.findspace.qingmingshanghe.MainActivity" >

    <name.findspace.qingmingshanghe.OnlyImageView 
    android:id="@+id/image_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

	</name.findspace.qingmingshanghe.OnlyImageView>
	<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation = "horizontal"
    android:layout_alignParentBottom="true"
	    >
        <Button
        android:id="@+id/autoLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autoleft" />
    	<Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop" />
    	<Button
        android:id="@+id/autoRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autoright" />
    	<Button
        android:id="@+id/listenup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listenup" />
	    
	</LinearLayout>


</RelativeLayout>